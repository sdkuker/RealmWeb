<div class="modal-dialog" role="'dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h2><%- title %></h2>
        </div>
        <div class="modal-body">
            <p><%- message %></p>
        </div>
        <div class="modal-footer">
            <button id='yesButton' class="close col-md-offset-1 col-md-2" data-dismiss="modal">Yes</button>
            <button id='noButton' class="close col-md-offset-1 col-md-2" data-dismiss="modal">No</button>
        </div>
    </div>
</div>